/* 搜索框组件 */
@import "components/search/search.wxss";

/* banner组件 */
@import "components/banner/banner.wxss";

image {
	width: 100%;
	height: 100%;
}

.content {
	padding: 20rpx;
}

.banner {
	height: 400rpx;
}

.order {
	margin: 20rpx 0;
	height: 240rpx;
	display: flex;
	justify-content: space-around;
}

.order .box {
	width: calc(50% - 10rpx);
	border: 1rpx solid #999999;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 36rpx;
}

.order .box:first-child {
	background-color: #fff;
}

.order .box:nth-child(2) {
	background-color: #999999;
}

.order .box+.box {
	margin-left: 20rpx;
}

.banner+.banner {
	margin-top: 20rpx;
}
